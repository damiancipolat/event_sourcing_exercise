{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".jsx", ".ts", ".tsx"]
          }
        }
    },
    "rules": {
        "import/no-unresolved":"off",
        "no-undef": "off",
        "no-unused-expressions": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "": "never",
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
         ]        
    }
}
